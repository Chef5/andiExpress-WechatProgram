/* pages/index/index.wxss */

.page{
  background: whitesmoke;
}
view{
  font-size: 13px;
}
.images{
  width: 25px;
  height: 25px;
  margin-top:5px;
  margin-left: 10px;
  margin-right: 10px;
}
.slide-image{
  width: 100%;
  height: 150px;
}
.list_one{
  margin-top: 5px;
  background-color: white;
}
.list_two{
  margin-top: 10px;
  background-color: white;
}
.list_three{
  height: 100px;
  margin-top: 10px;
  background-color: white;
}
.weui-cell__title{
  margin-top: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  box-sizing: border-box;
}
.weui-cell__hd{
  margin-top: 15px;
  padding:10px 0px 10px 20px;
}
.weui-input_code{
  border: 1rpx solid rgb(177, 174, 174);
}
.weui-textarea{
  margin-top: 10px;
  padding-top: 5px;
  margin-bottom: 10px;
  border: 1rpx solid rgb(177, 174, 174);
}
.button{
  display:flex;
  align-items: center;
  margin-top: 14px;
  margin-bottom: 20px;
  background-color: #000035c2;
  color: whitesmoke;
}
.jiesuan{
  display: flex;
  flex-direction: row;
}
.jisuan_money{
  position: absolute;
  right: 50rpx;
  line-height: 50px;
  vertical-align: middle;
}
.jisuan_money text{
  color: red;
  font-weight: 700;
  display: inline-block;
  margin-left: 10rpx;
}




